{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:best-practices",
    "gitlab>tnl-project/renovate-config:cmake"
  ],
  "packageRules": [
    {
      "description": "Do not pin digests for container images in GitLab CI configuration",
      "matchFileNames": [
        ".gitlab-ci.yml"
      ],
      "pinDigests": false
    }
  ]
}
